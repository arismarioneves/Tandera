<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?BackgroundColorSecondary"
    android:clipToPadding="false"
    android:foreground="?android:selectableItemBackground"
    android:paddingBottom="@dimen/spacing_minor"
    android:paddingLeft="@dimen/spacing_major"
    android:paddingRight="@dimen/spacing_major"
    android:paddingTop="@dimen/spacing_minor"
    android:stateListAnimator="@animator/raise">

    <com.mari05lim.tandera.views.custom_views.TanderaImageView
        android:id="@+id/imageview_poster"
        android:layout_width="@dimen/movie_list_small_image_width"
        android:layout_height="@dimen/movie_list_small_image_width"
        android:layout_gravity="center_vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="56dp"
        android:orientation="vertical">

        <com.mari05lim.tandera.views.custom_views.TanderaTextView
            android:id="@+id/title"
            style="@style/Widget.Tandera.TextAppearance.PrimaryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.mari05lim.tandera.views.custom_views.TanderaTextView
            android:id="@+id/textview_subtitle_1"
            style="@style/Widget.Tandera.TextAppearance.SecondaryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</FrameLayout>