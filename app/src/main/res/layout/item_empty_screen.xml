<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?BackgroundColorPrimary">

    <androidx.cardview.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_minor"
        android:layout_marginTop="@dimen/spacing_minor"
        android:layout_marginRight="@dimen/spacing_minor"
        app:cardBackgroundColor="@color/primary_dark"
        app:cardCornerRadius="4.0dip">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="12.0dip">

            <ImageView
                android:id="@+id/empty_screen_icon"
                android:layout_width="96.0dip"
                android:layout_height="96.0dip"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/empty_screen_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/empty_screen_icon"
                android:textColor="@android:color/white"
                android:textSize="@dimen/abc_text_size_title_material" />

            <TextView
                android:id="@+id/empty_screen_body"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/empty_screen_title"
                android:textColor="@android:color/white"
                android:textSize="@dimen/abc_text_size_subhead_material" />

            <TextView
                android:id="@+id/empty_screen_action"
                style="@style/Tandera.Button.PrimaryDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/empty_screen_body"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>