<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/movie_grid_two_line_bar_height">

    <ImageView
        android:id="@+id/context_menu"
        style="@style/CardOverflow"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="36.0dip"
        android:layout_marginEnd="-15dip"
        android:layout_marginRight="-15dip"
        android:background="?attr/selectableItemBackgroundBorderless"
        tools:ignore="ContentDescription" />

    <com.mari05lim.tandera.views.custom_views.TanderaTextView
        android:id="@+id/title"
        style="@style/Widget.Tandera.Movie.Grid.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.mari05lim.tandera.views.custom_views.TanderaTextView
        android:id="@+id/textview_subtitle_1"
        style="@style/Widget.Tandera.TextAppearance.SecondaryText.Small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="17dip"
        android:layout_marginRight="17dip"
        android:layout_marginBottom="8dp"
        android:ellipsize="end"
        android:maxLines="1" />
</RelativeLayout>