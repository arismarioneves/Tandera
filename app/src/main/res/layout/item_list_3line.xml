<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/movie_list_item_height"
    android:background="?attr/selectableItemBackground"
    android:orientation="horizontal">

    <com.mari05lim.tandera.views.custom_views.TanderaImageView
        android:id="@+id/imageview_poster"
        android:layout_width="@dimen/movie_list_image_width"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/spacing_major"
        android:layout_marginLeft="@dimen/spacing_major"
        android:layout_marginTop="@dimen/spacing_minor"
        android:layout_marginBottom="@dimen/spacing_minor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/spacing_major"
        android:layout_marginRight="@dimen/spacing_major"
        android:orientation="vertical">

        <com.mari05lim.tandera.views.custom_views.TanderaTextView
            android:id="@+id/title"
            style="@style/Widget.Tandera.TextAppearance.PrimaryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2" />

        <com.mari05lim.tandera.views.custom_views.TanderaTextView
            android:id="@+id/textview_subtitle_1"
            style="@style/Widget.Tandera.TextAppearance.SecondaryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.mari05lim.tandera.views.custom_views.TanderaTextView
            android:id="@+id/textview_subtitle_2"
            style="@style/Widget.Tandera.TextAppearance.SecondaryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>