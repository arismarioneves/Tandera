<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_content_holder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/z_card"
    android:foreground="?android:attr/selectableItemBackground"
    android:stateListAnimator="@animator/raise"
    app:cardBackgroundColor="?BackgroundColorSecondary"
    app:cardPreventCornerOverlap="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.mari05lim.tandera.views.custom_views.TanderaImageView
            android:id="@+id/imageview_poster"
            android:layout_width="match_parent"
            android:layout_height="@dimen/movie_poster_height"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            tools:ignore="ContentDescription" />

        <include layout="@layout/item_grid_2line" />

    </LinearLayout>
</androidx.cardview.widget.CardView>