<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/z_card"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardPreventCornerOverlap="false">

        <com.mari05lim.tandera.views.custom_views.TanderaImageView
            android:id="@+id/imageview_poster"
            android:layout_width="match_parent"
            android:layout_height="@dimen/saved_poster_height"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/saved_grid_two_line_bar_height"
            android:layout_gravity="bottom"
            android:background="#AA000000"
            android:orientation="vertical">

            <com.mari05lim.tandera.views.custom_views.TanderaTextView
                android:id="@+id/title"
                style="@style/Widget.Tandera.Watched.Grid.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Avengers" />

            <com.mari05lim.tandera.views.custom_views.TanderaTextView
                android:id="@+id/subtitle"
                style="@style/Widget.Tandera.Show.Grid.Subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="-2dp"
                android:ellipsize="end"
                android:maxLines="1" />
        </RelativeLayout>
</androidx.cardview.widget.CardView>