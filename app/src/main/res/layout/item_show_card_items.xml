<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:padding="@dimen/spacing_minor">

    <ImageButton
        android:id="@+id/like_button"
        android:layout_width="@dimen/show_grid_item_icon_size"
        android:layout_height="@dimen/show_grid_item_icon_size"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/show_card_item_icon_padding"
        android:background="@android:color/transparent"
        android:src="?StarIconItem" />

    <ImageButton
        android:id="@+id/share_button"
        android:layout_width="@dimen/show_grid_item_icon_size"
        android:layout_height="@dimen/show_grid_item_icon_size"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/show_card_item_icon_padding"
        android:background="@android:color/transparent"
        android:src="?ShareIconItem" />
</LinearLayout>