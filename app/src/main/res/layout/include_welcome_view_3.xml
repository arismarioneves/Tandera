<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="@integer/welcome_view_image_weight"
        android:scaleType="centerInside"
        android:src="@drawable/firstexperience_movie"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="@integer/welcome_view_content_weight"
        android:orientation="vertical">

        <com.mari05lim.tandera.views.custom_views.TanderaTextView
            style="@style/Widget.Tandera.TextAppearance.WelcomeScreen.Primary"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/welcome_extras_title" />

        <com.mari05lim.tandera.views.custom_views.TanderaTextView
            style="@style/Widget.Tandera.TextAppearance.WelcomeScreen.Secondary"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/welcome_extras_desc" />
    </LinearLayout>
</LinearLayout>